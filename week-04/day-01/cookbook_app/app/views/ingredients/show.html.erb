<h2><%= @ingredient.name %></h2>

<p>
  <%= link_to "Edit", edit_ingredient_path(@ingredient) %> |
  <%= link_to "Destroy", @ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<p>
  <%= image_tag @ingredient.image %>
</p>

<ul>
  <li>Measurement: <%= @ingredient.measurement %></li>
  <li>Cost: <%= @ingredient.cost %></li>
</ul>