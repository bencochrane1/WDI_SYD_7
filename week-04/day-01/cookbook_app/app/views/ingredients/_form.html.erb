<%= form_for @ingredient do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :measurement %>
    <%= f.text_field :measurement %>
  </p>
  <p>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>