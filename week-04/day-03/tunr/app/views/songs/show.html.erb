<h2><%= @song.name %></h2>

<p>
  <strong>Actions:</strong>
  <%= link_to "Edit", edit_song_path(@song) %> |
  <%= link_to "Destroy", @song, method: :delete, data: { confirm: "Are you sure?" } %>
</p>

<hr>

<dl>
  <dt>Artist</dt>
  <dd><%= link_to @song.artist.name, @song.artist %></dd>
  <dt>Genre</dt>
  <dd><%= @artist.genre %></dd>
  <dt>Year</dt>
  <dd><%= @artist.year %></dd>
  <dt>Duration</dt>
  <dd><%= @artist.duration %></dd>
</dl>
